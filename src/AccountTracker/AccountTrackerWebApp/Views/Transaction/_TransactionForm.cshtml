@model AccountTrackerWebApp.ViewModels.ViewModel

<div class="row">
    
    <div class="col-md-6">
        
        <div class="form-group">
            <!--TODO: Issue- DateTimePicker is not working.-->
            @Html.LabelFor(m => m.TransactionOfInterest.TransactionDate, new { @class = "control-label"})
            @Html.TextBoxFor(m => m.TransactionOfInterest.TransactionDate, "{0:d}", new { @class = "form-control datepicker"})
        </div>
    
    </div>

    <div class="col-md-6">
    
        <div class="form-group">
            @Html.LabelFor(m => m.TransactionOfInterest.TransactionTypeID, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.TransactionOfInterest.TransactionTypeID, Model.TransactionTypesSelectList, "", new { @class = "form-control"})
        </div>
    
    </div>

</div>

<div class="row">

    <div class="col-md-6">

        <div class="form-group">
            @Html.LabelFor(m => m.TransactionOfInterest.AccountID, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.TransactionOfInterest.AccountID, Model.AccountSelectList, "", new { @class = "form-control" })
        </div>

    </div>

    <div class="col-md-6">

        <div class="form-group">
            @Html.LabelFor(m => m.TransactionOfInterest.CategoryID, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.TransactionOfInterest.CategoryID, Model.CategorySelectList, "", new { @class = "form-control"})
        </div>

    </div>

</div>

<div class="row">

    <div class="col-md-6">

        <div class="form-group">
            @Html.LabelFor(m => m.TransactionOfInterest.VendorID, new { @class = "control-label" })
            @Html.DropDownListFor(m => m.TransactionOfInterest.VendorID, Model.VendorSelectList, "", new { @class = "form-control" })
        </div>

    </div>

    <div class="col-md-6">

        <div class="form-group">
            @Html.LabelFor(m => m.TransactionOfInterest.Amount, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.TransactionOfInterest.Amount, "", new { @class = "form-control" })
        </div>

    </div>

</div>

<div class="row">

    <div class="col-md-12">

        <div class="form-group">
            @Html.LabelFor(m => m.TransactionOfInterest.Description, new { @class = "control-label "})
            @Html.TextAreaFor(m => m.TransactionOfInterest.Description, 14, 10, new { @class = "form-control" })
        </div>

    </div>

</div>
