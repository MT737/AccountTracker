@model IList<AccountTrackerLibrary.Models.Vendor>

@{
    ViewBag.Title = "Vendors";
}

@Html.Partial("_Message")

@Html.Partial("_IndexHeading")
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Vendor</th>
                            <th>Default</th>
                            <th>Displayed</th>
                            <th>&nbsp;</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var vendor in Model)
                        {
                            <tr>
                                <td>@vendor.Name</td>
                                <td>@vendor.IsDefault</td>
                                <td>@vendor.IsDisplayed</td>
                                @if (!vendor.IsDefault)
                                {

                                    <td>
                                        <a href="@Url.Action("Edit", "Vendor", new {id = vendor.VendorID})" />
                                        <span class="glyphicon glyphicon-edit"></span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Delete", "Vendor", new {id = vendor.VendorID})" />
                                        <span class="glyphicon glyphicon-trash"></span>
                                    </td>

                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div class="panel panel-default">
    </div>
</div>

